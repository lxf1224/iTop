<?xml version="1.0" encoding="UTF-8"?>
<installation>
  <steps type="array">
    <step>
      <title>Configuration Management options</title>
      <description>
        <![CDATA[<h2>The options below allow you to configure the type of elements that are to be managed inside iTop.</h2>]]></description>
      <banner>/images/modules.png</banner>
      <options type="array">
				<choice>
          <extension_code>itop-structure</extension_code>
          <title>iTop Core</title>
          <description>All the base objects that are mandatory for iTop
          </description>
          <modules type="array">
            <module>itop-structure</module>
            <module>itop-attachments</module>
            <module>itop-profiles-itil</module>
            <module>itop-welcome-itil</module>
            <module>itop-config</module>
            <module>itop-backup</module>
            <module>itsm-designer-connector</module>
            <module>itop-object-copier</module>
            <module>itop-stencils</module>
            <module>itop-files-information</module>
            <module>combodo-db-tools</module>
            <module>itop-core-update</module>
            <module>itop-log-mgmt</module>
            <module>itop-system-information</module>
	          <module>itop-fence</module>
	          <module>itop-time-tracking</module>
	          <module>combodo-calendar-view</module>
	          <module>itop-admin-delegation-profiles</module>
	          <module>combodo-fulltext-search</module>
	          <module>combodo-kanban-view</module>
	          <module>combodo-notify-on-expiration</module>
	          <module>combodo-menu-filter</module>
	          <module>itop-portal-base</module>
	          <module>itop-portal</module>
          </modules>
          <mandatory>true</mandatory>
        </choice>    
        <choice>
          <extension_code>itop-config-mgmt-core</extension_code>
          <title>Configuration Management Core</title>
          <description>All the base objects that are in the iTop CMDB
          </description>
          <modules type="array">
            <module>itop-config-mgmt</module>
          </modules>
          <default>false</default>
          <sub_options>
				    <options type="array">
              <choice>
                <extension_code>itop-config-mgmt-datacenter</extension_code>
                <title>Data Center Devices</title>
                <description>Manage Data Center devices such as Racks, Enclosures, PDUs, etc.</description>
                <modules type="array">
                  <module>itop-datacenter-mgmt</module>
                </modules>
                <default>false</default>
              </choice>
              <choice>
               <extension_code>itop-config-mgmt-end-user</extension_code>
               <title>End-User Devices</title>
               <description>Manage devices related to end-users: PCs, Phones,
                 Tablets, etc.
               </description>
               <modules type="array">
                <module>itop-endusers-devices</module>
               </modules>
	              <default>false</default>
              </choice>
              <choice>
                <extension_code>itop-config-mgmt-storage</extension_code>
                <title>Storage Devices</title>
                <description>Manage storage devices such as NAS, SAN Switches,
                Tape Libraries and Tapes, etc.
                </description>
                <modules type="array">
                  <module>itop-storage-mgmt</module>
                </modules>
                <default>false</default>
              </choice>
              <choice>
                <extension_code>itop-config-mgmt-virtualization</extension_code>
                <title>Virtualization</title>
                <description>Manage Hypervisors, Virtual Machines and Farms.
                </description>
                <modules type="array">
                  <module>itop-virtualization-mgmt</module>
                </modules>
                <default>false</default>
              </choice>
	          </options>
          </sub_options>
        </choice>
      </options>
    </step>
    <step>
      <title>Tickets Management options</title>
      <description>
        <![CDATA[<h2>Select the type of tickets you want to use in order to respond to user requests and incidents.</h2>]]></description>
      <banner>./itop-structure/images/incident-escalated.png</banner>
      <options type="array">
        <choice>
          <extension_code>itop-ticket-mgmt-simple-ticket</extension_code>
          <title>Simple Ticket Management</title>
          <description>Select this option to use one single type of
            tickets for all kind of requests.
          </description>
          <modules type="array">
            <module>itop-service-mgmt</module>
            <module>itop-tickets</module>
            <module>itop-request-mgmt</module>
            <module>email-reply</module>
            <module>precanned-replies</module>
            <module>precanned-replies-pro</module>
            <module>itop-request-template</module>
            <module>combodo-email-synchro</module>
	          <module>itop-standard-email-synchro</module>
	          <!-- <module>itop-assign-to-me</module>-->
	          <module>combodo-autoclose-ticket</module>
	          <module>itop-sla-computation</module>
	          <module>combodo-sla-considering-business-hours</module>
          </modules>
          <default>false</default>
        </choice>
      </options>
    </step>
  </steps>
</installation>
